{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python main.py",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowMs": 60000
  },
  "env": {
    "PORT": "8000"
  }
}
